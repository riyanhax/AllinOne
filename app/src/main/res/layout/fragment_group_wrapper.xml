<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:weightSum="1"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/layoutGroup"
            android:layout_width="match_parent"
            android:layout_weight="0.37"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_height="0dp">

            <ImageView

                android:id="@+id/imageGroup"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.72"
                android:scaleType="fitCenter"
                android:src="@drawable/app_icon"
                />
            <TextView
                android:id="@+id/textGroupName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:gravity="center_horizontal"
                android:textColor="@color/textGrey"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.17"
                android:gravity="center_horizontal"
                >
                <Button
                    android:id="@+id/btnAction"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:text="Join"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorEditHint"
                    android:background="@drawable/btn_bg_active"
                    />
                <Button
                    android:id="@+id/btnChat"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:text="Chat"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/btnAction"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorEditHint"
                    android:background="@drawable/btn_bg_active"
                    />
                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:text="Delete"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/btnChat"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorEditHint"
                    android:background="@drawable/btn_bg_active"
                    />
            </RelativeLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/textGrey"
            android:layout_weight="0.002"/>


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.538"
            android:orientation="vertical"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBaGroup"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:weightSum="2"
            android:background="@color/bgColorBottomBar"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_gravity="bottom"
            android:layout_weight="0.09"
            android:layout_height="0dp">


            <ImageView
                android:id="@+id/imageActionGroupUploads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9925"
                android:src="@drawable/ic_upload"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/line"
                android:layout_weight="0.015"/>

            <ImageView
                android:id="@+id/imageActionGroupMembers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9925"
                android:src="@drawable/ic_followers"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutGroupShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_45sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_alignParentRight="true">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/share"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            fab:fab_size="mini"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/menuShare"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            fab:fab_expandDirection="up"
            fab:fab_addButtonSize="mini"
            fab:fab_addButtonColorNormal="@android:color/transparent"
            fab:fab_addButtonColorPressed="@android:color/transparent"
            fab:fab_addButtonPlusIconColor="@android:color/transparent"
            android:layout_alignParentRight="true"
            >

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_icon="@drawable/fb"
                fab:fab_colorNormal="#537cbe"
                fab:fab_colorPressed="#537cbe"
                fab:fab_size="mini"/>
            />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#78cef1"
                fab:fab_icon="@drawable/twi"
                fab:fab_colorPressed="#78cef1"
                fab:fab_size="mini"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#FF029947"
                fab:fab_icon="@drawable/whats"
                fab:fab_colorPressed="#FF029947"
                fab:fab_size="mini"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnLinkedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_icon="@drawable/linkedin"
                fab:fab_colorNormal="#FF0278B5"
                fab:fab_colorPressed="#FF0278B5"
                fab:fab_size="mini"/>
            />



            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnGPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_icon="@drawable/google"
                fab:fab_colorNormal="#FFDC4B39"
                fab:fab_colorPressed="#FFDC4B39"
                fab:fab_size="mini"/>
            />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnPinterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#FFBD0A1E"
                fab:fab_icon="@drawable/pinterest"
                fab:fab_colorPressed="#FFBD0A1E"
                fab:fab_size="mini"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_icon="@drawable/mail"
                fab:fab_colorNormal="#8b8f91"
                fab:fab_colorPressed="#8b8f91"
                fab:fab_size="mini"/>
            />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

        ></RelativeLayout>

</RelativeLayout>