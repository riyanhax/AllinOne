<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/_250sdp"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SwopInfo"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorBorder"
        android:gravity="center_horizontal"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SwopInfo.com - Subscription Options"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorBorder"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connecting the world of business and people from every corner of the globe."
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorBorder"
        android:gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btnIndividual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SwopInfo - Individual"
        android:textAllCaps="false"
        android:textSize="@dimen/_15sdp"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_5sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/colorPrimary"
        android:background="@null"
        />
    <Button
        android:id="@+id/btnBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SwopInfo - Business Profiles"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@null"
        />
</LinearLayout>