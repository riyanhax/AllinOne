<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <Button
            android:id="@+id/btnUploads"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_weight="0.49"
            android:background="@drawable/btn_bg_active"
            android:text="Uploads"
            android:textColor="@color/colorEdit"
            android:textAllCaps="false"
            />

        <ImageView
            android:id="@+id/btnImageAdd"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_weight="0.49"
            android:textColor="@color/colorEdit"
            android:visibility="gone"
            android:background="@drawable/btn_bg_inactive"
            android:layout_marginLeft="@dimen/_13sdp"
            android:src="@drawable/ic_plus"
            android:textAllCaps="false"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_10sdp"
            />

        <Button
            android:id="@+id/btnFolders"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_weight="0.49"
            android:textColor="@color/colorEdit"
            android:background="@drawable/btn_bg_inactive"
            android:layout_marginLeft="@dimen/_13sdp"
            android:text="Folder"
            android:textAllCaps="false"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/bgColorBottomBar"
        />

    <FrameLayout
        android:id="@+id/frame_inner_uploads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_9sdp"
        android:layout_marginRight="@dimen/_9sdp"
        />

</LinearLayout>