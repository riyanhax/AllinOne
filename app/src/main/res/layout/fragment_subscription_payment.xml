<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:text="@string/subscription_title"
            />

        <Button
            android:id="@+id/btnReadMore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/border_button_green"
            android:textColor="@android:color/white"
            android:text="Read More"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_marginRight="@dimen/_100sdp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Primary User Information"

            />

        <!--Primary User Infromation-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            >

            <EditText
                android:id="@+id/editEmail"
                android:hint="Email Address"
                style="@style/EditTextStyle"
                android:layout_margin="0dp"
                />

            <EditText
                android:id="@+id/editFirstName"
                android:hint="First Name"
                style="@style/EditTextStyle"
                />
            <EditText
                android:id="@+id/editLastName"
                android:hint="Last Name"
                style="@style/EditTextStyle"
                />
            <EditText
                android:id="@+id/editUserName"
                android:hint="User Name"
                style="@style/EditTextStyle"
                />
            <EditText
                android:id="@+id/editDOB"
                android:hint="Date of Birth"
                android:clickable="false"
                android:focusable="false"
                style="@style/EditTextStyle"
                />
            <EditText
                android:id="@+id/editPassword"
                android:hint="Password"
                android:inputType="textPassword"
                style="@style/EditTextStyle"
                />
            <EditText
                android:id="@+id/editConfirmPassword"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                style="@style/EditTextStyle"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Package"
                android:layout_marginTop="@dimen/_8sdp"
                />
            <RadioGroup
                android:id="@+id/radioGroupPay"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RadioButton
                    android:id="@+id/radio_month"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:textColor="@color/textGrey"
                    android:layout_height="wrap_content"
                    android:text="R499 ($39) a month"
                    />
                <RadioButton
                    android:id="@+id/radio_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R4999 ($399) a year"
                    android:textColor="@color/textGrey"
                    />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:text="Company Information"

            />

        <!--Company Infromation-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            >

            <EditText
                android:id="@+id/editCompanyName"
                android:hint="Company Name"
                style="@style/EditTextStyle"
                android:layout_margin="0dp"
                />

            <EditText
                android:id="@+id/editHanlde"
                android:hint="Handle"
                style="@style/EditTextStyle"
                />

            <TextView
                android:id="@+id/text_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:text="Select Location"
                />

            <RadioGroup
                android:id="@+id/rgroup_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_btn_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Location"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Find Location"
                    />
            </RadioGroup>


            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content">
            <fragment
                android:id="@+id/place_autocomplete_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <Button
                    android:id="@+id/btnClickHere"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:text="Click Here"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/_8sdp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/btnClickHere"
                    android:maxLines="2"
                    android:text="if you would like to enter more information about your company"

                    />
            </RelativeLayout>

            <!--More Companies Fields Layout-->
            <LinearLayout
                android:id="@+id/layoutMoreCompanyFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <EditText
                    android:id="@+id/editIndustry"
                    android:hint="Industry"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editAddress1"
                    android:hint="Address 1"
                    android:clickable="false"
                    android:focusable="false"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editAddress2"
                    android:hint="Address 2"
                    android:clickable="false"
                    android:focusable="false"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editCity"
                    android:hint="City"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editCountry"
                    android:hint="Country"
                    android:clickable="false"
                    android:focusable="false"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editPostCode"
                    android:hint="Post Code"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editExtraInfo1"
                    android:hint="Extra Info"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editExtraInfo2"
                    android:hint="Extra Info 2"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editCompanyEmail"
                    android:hint="Email Address"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editTel1"
                    android:hint="Telephone 1"
                    android:inputType="phone"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editTel2"
                    android:hint="Telephone 2"
                    android:inputType="phone"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editFax"
                    android:hint="Fax"
                    android:inputType="phone"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editCell"
                    android:hint="Cell"
                    android:inputType="phone"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editFacebook"
                    android:hint="Facebook"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editTwitter"
                    android:hint="Twitter"
                    style="@style/EditTextStyle"
                    />
                <EditText
                    android:id="@+id/editWebsite"
                    android:hint="Website"
                    style="@style/EditTextStyle"
                    />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/border_button_green"
            android:textColor="@android:color/white"
            android:text="Submit"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_60sdp"
            android:layout_marginRight="@dimen/_60sdp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            />
    </LinearLayout>
</ScrollView>