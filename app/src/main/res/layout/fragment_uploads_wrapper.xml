<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_64sdp"
        >
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <Button
                android:id="@+id/btnUploads"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/btn_bg_active"
                android:text="Upload"
                android:textColor="@color/colorEdit"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btnFolders"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:textColor="@color/colorEdit"
                android:background="@drawable/btn_bg_inactive"
                android:layout_marginLeft="@dimen/_13sdp"
                android:text="Folder"
                android:textAllCaps="false"
                />

            <ImageView
                android:id="@+id/btnImageAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:textColor="@color/colorEdit"
                android:background="@drawable/btn_bg_inactive"
                android:layout_marginLeft="@dimen/_13sdp"
                android:src="@drawable/ic_plus"
                android:textAllCaps="false"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_10sdp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textUploadViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Views: 123"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/layout1"
            android:paddingTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            />

        <TextView
            android:id="@+id/textUploadDownloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloads: 123"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/layout1"
            android:paddingTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/textUploadViews"
            android:layout_marginLeft="@dimen/_12sdp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutUploadWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        >

    </LinearLayout>


</LinearLayout>