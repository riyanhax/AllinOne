<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    fab:cardUseCompatPadding="true"
    fab:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgColorHome"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/imageShareThumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_member"
            android:maxHeight="@dimen/_350sdp"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="centerCrop"
            />

        <!--Layout Views counts, downloads-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_views"
                />
            <TextView
                android:id="@+id/textViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_download"
                android:layout_marginLeft="@dimen/_8sdp"
                />
            <TextView
                android:id="@+id/textDownloadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_score"
                android:layout_marginLeft="@dimen/_8sdp"
                />
            <TextView
                android:id="@+id/textScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/textDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download"
                android:gravity="end"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

        </LinearLayout>


        <!--Layout Actions-->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageDisLike"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:src="@drawable/ic_dislike_normal"
                    android:layout_gravity="right|center"
                    />

                <ImageView
                    android:id="@+id/imageLike"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_marginRight="@dimen/_70sdp"
                    android:src="@drawable/ic_like_normal"
                    android:layout_gravity="right|center"
                    />

                <Button
                    android:id="@+id/btnComment"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="29dp"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="@dimen/_8sdp"
                    android:text="Comment"
                    android:textColor="#fff"
                    android:layout_marginRight="@dimen/_105sdp"
                    android:layout_gravity="right|center"
                    />

                <Button
                    android:id="@+id/btnShareMe"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="29dp"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="@dimen/_8sdp"
                    android:text="Share Me"
                    android:textColor="#fff"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_170sdp"
                    android:layout_gravity="right|center"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_icon="@drawable/share"
                        android:layout_alignParentRight="true"
                        fab:fab_size="normal"
                        />

                    <com.getbase.floatingactionbutton.FloatingActionsMenu
                        android:id="@+id/menuShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_expandDirection="left"
                        fab:fab_addButtonSize="normal"
                        fab:fab_addButtonColorNormal="@android:color/transparent"
                        fab:fab_addButtonColorPressed="@android:color/transparent"
                        fab:fab_addButtonPlusIconColor="@android:color/transparent"
                        android:layout_alignParentRight="true"
                        >


                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnFacebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fab:fab_icon="@drawable/fb"
                            fab:fab_colorNormal="#537cbe"
                            fab:fab_colorPressed="#537cbe"
                            fab:fab_size="normal"/>
                        />

<!--
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnInstagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fab:fab_icon="@drawable/instagram"
                            fab:fab_colorNormal="#ce3753"
                            fab:fab_colorPressed="#ce3753"
                            fab:fab_size="normal"/>
                        />
-->


                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnTwitter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fab:fab_colorNormal="#78cef1"
                            fab:fab_icon="@drawable/twi"
                            fab:fab_colorPressed="#78cef1"
                            fab:fab_size="normal"/>

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnWhatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fab:fab_colorNormal="#FF029947"
                            fab:fab_icon="@drawable/whats"
                            fab:fab_colorPressed="#FF029947"
                            fab:fab_size="normal"/>

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnLinkedIn"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            fab:fab_icon="@drawable/linkedin"
                            fab:fab_colorNormal="#FF0278B5"
                            fab:fab_colorPressed="#FF0278B5"
                            fab:fab_size="normal"/>
                        />

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnGPlus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fab:fab_icon="@drawable/google"
                            fab:fab_colorNormal="#FFDC4B39"
                            fab:fab_colorPressed="#FFDC4B39"
                            fab:fab_size="normal"/>
                        />

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnPinterest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fab:fab_colorNormal="#FFBD0A1E"
                            fab:fab_icon="@drawable/pinterest"
                            fab:fab_colorPressed="#FFBD0A1E"
                            fab:fab_size="normal"/>


                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnMail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fab:fab_icon="@drawable/mail"
                            fab:fab_colorNormal="#8b8f91"
                            fab:fab_colorPressed="#8b8f91"
                            fab:fab_size="normal"/>
                        />

                    </com.getbase.floatingactionbutton.FloatingActionsMenu>


                </RelativeLayout>


            </FrameLayout>

            <!--
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_below="@+id/btnShare"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editComment"
                            android:layout_width="0dp"
                            android:layout_weight="0.71"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:hint="Add Comment Here"
                            android:singleLine="true"
                            android:textSize="@dimen/_12sdp"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.05"
                            android:layout_height="1dp"/>
                        <Button
                            android:id="@+id/btnAddComment"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="@dimen/_25sdp"
                            android:text="Add"
                            android:layout_alignParentRight="true"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:background="@color/colorPrimary"
                            />
                    </LinearLayout>
            -->

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>