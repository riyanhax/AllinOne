<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    fab:cardUseCompatPadding="true"
    fab:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgColorHome"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/imageShareThumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="centerCrop"
            />

        <!--Layout Views counts, downloads-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_views"
                />
            <TextView
                android:id="@+id/textViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_download"
                android:layout_marginLeft="@dimen/_8sdp"
                />
            <TextView
                android:id="@+id/textDownloadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_score"
                android:layout_marginLeft="@dimen/_8sdp"
                />
            <TextView
                android:id="@+id/textScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/textDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download"
                android:gravity="end"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

        </LinearLayout>


        <!--Layout Actions-->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            >


            <ImageView
                android:id="@+id/imageLike"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_like_normal"
                />


            <ImageView
                android:id="@+id/imageDisLike"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="36dp"
                android:src="@drawable/ic_dislike_normal"
                android:layout_marginLeft="@dimen/_20sdp"
                />

            <ImageView
                android:id="@+id/imgComment"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="36dp"
                android:src="@drawable/ic_comment"
                android:layout_marginLeft="@dimen/_20sdp"
                />

            <ImageView
                android:id="@+id/imgShareToChat"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="36dp"
                android:src="@drawable/ic_share_to_chat"
                android:layout_marginLeft="@dimen/_20sdp"
                />

            <ImageView
                android:id="@+id/imgShareToApp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="36dp"
                android:src="@drawable/ic_share"
                android:layout_marginLeft="@dimen/_20sdp"
                />


        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>